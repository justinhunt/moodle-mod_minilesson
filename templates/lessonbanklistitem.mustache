<table class="table table-bordered table-striped listtable">
    <thead>
        <tr>
            <th></th>
            <th>{{#str}}title, mod_minilesson{{/str}}</th>
            <th class="langcolumn">{{#str}}targetlang, mod_minilesson{{/str}}</th>
            <th class="levelcolumn">{{#str}}level, mod_minilesson{{/str}}</th>
            <th class="keywordcolumn">{{#str}}keyword, mod_minilesson{{/str}}</th>
            <th class="listdescription">{{#str}}description{{/str}}</th>
            <th>{{#str}}items, mod_minilesson{{/str}}</th>
            <th>{{#str}}actions{{/str}}</th>
        </tr>
    </thead>
    <tbody>
    {{#lessonitems}}
        <tr>
            <td class="imgcolumn"><img src="{{posterimage}}" alt="{{name}}" class="searchimg img-responsive"></td>
            <td>{{name}}</td>
            <td class="langcolumn">{{language}}</td>
            <td class="levelcolumn">{{languagelevel}}</td>
            <td class="keywordcolumn"></b>{{keywords}}</p></td>
            <td>
                <p data-text={{#quote}}{{{description}}}{{/quote}}>
                    <b class="mr-2">{{#str}}descriptioncolon, mod_minilesson{{/str}}</b>
                    {{#shortentext}} 150, {{{description}}} {{/shortentext}}
                </p>
            </td>
            <td>{{itemcount}}</td>
            <td>
                {{#nativelanguage}}
                    <a data-translateimportid="{{id}}" data-sourcelanguage="{{{nativelanguage}}}" data-action="translate" class="btn btn-primary text-white rounded ml-auto">
                        {{#str}}translatetoimport, mod_minilesson{{/str}}
                    </a>
                {{/nativelanguage}}
                <a data-id="{{id}}" data-action="download" data-download="{{name}}" class="btn btn-primary text-white rounded ml-auto">
                    {{#str}}import{{/str}}
                </a>
            </td>
        </tr>
    {{/lessonitems}}
    {{^lessonitems}}
        <tr>
            <td colspan="7">
                <p class="text-center"><b>{{#str}}nolessonitemfound, mod_minilesson{{/str}}</b></p>
            </td>
        </tr>
    {{/lessonitems}}
    </tbody>
</table>