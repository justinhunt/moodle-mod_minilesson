<div class='a4e-basic_feedback'>
  <h2>
    <i class='fa fa-trophy'></i> {{totalcorrect}}/{{total}} {{#str}}correct, mod_wordcards{{/str}}
    <hr/>
    <i class='fa fa-clock-o'></i> {{prettytime}}
    {{#gamescore}}
      <hr/>
      <i class='fa fa-star'></i> {{gamescore}} {{#str}}points, mod_wordcards{{/str}}
    {{/gamescore}}
  </h2>
</div>

{{> mod_wordcards/feedback_details}}

<hr/>

<div id="try-again-or-next">
    <button style="width:50%;float:left;" id="minilesson-try-again" class="btn btn-danger btn-lg">
        <i class="fa fa-refresh"></i> {{#str}}tryagain, mod_minilesson{{/str}}
    </button>
    {{#nexturl}}
        {{! In free mode we wont have a next URL so dont need this button }}
    <button style="width:50%;float:left;" id='minilesson-close-results' class='btn btn-primary btn-lg'>
        {{#str}}done, mod_minilesson{{/str}} <i class='fa fa-arrow-right'></i>
    </button>
    {{/nexturl}}
</div>