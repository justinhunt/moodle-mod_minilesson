<div class="minilesson_questionheader_contents">
    {{^magazine}}{{#itemimage}}<div class="mod_minilesson_itemimage_cont"><img src="{{{itemimage}}}" class="mod_minilesson_itemimage"/></div>{{/itemimage}}{{/magazine}}
    {{#itemtextarea}}<div class="mod_minilesson_itemtextarea_cont">
            <div class="mod_minilesson_itemtextarea {{rtl}}">
                {{#magazine}}{{#itemimage}}<div class="mod_minilesson_itemimage_cont mod_minilesson_magazine"><img src="{{{itemimage}}}" class="mod_minilesson_itemimage"/></div>{{/itemimage}}{{/magazine}}
                {{{itemtextarea}}}
            </div>
        </div>
    {{/itemtextarea}}
    {{#itemaudio}}<div class="mod_minilesson_itemaudio_cont"><audio controls src="{{{itemaudio}}}" class="mod_minilesson_itemaudio"></audio></div>{{/itemaudio}}
    {{#itemvideo}}<div class="mod_minilesson_itemvideo_cont"><video controls src="{{{itemvideo}}}" class="mod_minilesson_itemvideo"></video></div>{{/itemvideo}}
    {{#itemiframe}}<div class="mod_minilesson_itemiframe_cont"><div class="mod_minilesson_iframe_responsive">{{{itemiframe}}}</div></div>{{/itemiframe}}
    <!-- moved TTS Audio from questioncontents -> question header -->
    {{#itemytvideoid}}<div class="mod_minilesson_itemytclip_cont"><div class="mod_minilesson_iframe_responsive">{{> mod_minilesson/youtubeclip}}</div></div>{{/itemytvideoid}}
    {{#itemttsdialog}}<div class="mod_minilesson_itemttsdialog_cont">{{> mod_minilesson/ttsdialog}}</div>{{/itemttsdialog}}
    {{#itemttspassage}}<div class="mod_minilesson_itemttspassage_cont">{{> mod_minilesson/ttspassage}}</div>{{/itemttspassage}}
    {{#audiostory}}<div class="mod_minilesson_audiostory_cont">{{> mod_minilesson/audiostory}}</div>{{/audiostory}}
</div>