{{> mod_minilesson/questionheader}}
{{> mod_minilesson/progresstimer}}
<div class="minilesson_freewriting_box">
    <div class="ml_freewriting_resultsbox"></div>
    <div class="ml_freewriting_pendingbox hidden"><center><i class="fa fa-spinner fa-pulse fa-5x fa-fw"></i></center></div>
        <div class="ml_freewriting_actionbox">
            <div class="ml_freewriting_textareacontainer">
                <textarea class="ml_freewriting_textarea" rows="{{textarearows}}" cols="50" placeholder="{{#str}}writehere, mod_minilesson{{/str}}" lang="{{language}}"></textarea>
                {{#enablevkeyboard}}
                    <img class="ml_freewriting_keyboard_toggle" src="{{vkeyboardurl}}" style="cursor: pointer; width: 24px; height: 24px;" title="Virtual Keyboard" />
                {{/enablevkeyboard}}
            </div>
            <a class="btn btn-primary ml_freewriting_submitbutton" href="#">{{#str}}submit, mod_minilesson{{/str}}</a>
            <div class="timerstatus_{{uniqueid}} ml_freewriting_timerdisplay ml_recsession"></div>
            <div class="mod_minilesson_fw_wordgoal {{^countwords}}hidden{{/countwords}} ml_recsession">{{#str}} currentwordcount , mod_minilesson {{/str}}: <span class="ml_wordcount">0</span>/{{targetwordcount}}</div>
        </div>
</div>
{{> mod_minilesson/questionfooter}}