{{< mod_minilesson/questionheader}}
{{$slashscreen}}
<div class="ml_freewriting_startscreen startmodule_splashscreen" data-region="splashscreen">
    <div class="freewriting_image_container startmodule_image_container text-center pt-5">
        <img class="freewriting_image startmodule_image" src="{{{itemimageurl}}}" alt="{{#str}}freewriting, mod_minilesson{{/str}}">
    </div>
    <div class="freewriting_title startmodule_title text-center mt-3">{{#str}}freewriting, mod_minilesson{{/str}}</div>
    <div class="freewriting_description startmodule_description text-center mt-3">{{iteminstructions}}</div>
    <div class="freewriting_mainmenu startmodule_mainmenu pt-4 pb-5">
        <button class="btn freewriting_start_btn startmodule_btn" data-action="startmodule">
            {{#str}}start, mod_minilesson{{/str}} <i class="fa fa-play ml-1"></i>
        </button>
    </div>
</div>
{{/slashscreen}}
{{/ mod_minilesson/questionheader}}
{{> mod_minilesson/progresstimer}}
<div class="minilesson_freewriting_box">
    <div class="ml_freewriting_resultsbox"></div>
    <div class="ml_freewriting_pendingbox hidden">
        <center>
            <i class="fa fa-spinner fa-pulse fa-5x fa-fw"></i>
        </center>
    </div>
    <div class="ml_freewriting_actionbox">
        <div class="ml_freewriting_textareacontainer">
            <textarea class="ml_freewriting_textarea" rows="{{textarearows}}" cols="50" placeholder="{{#str}}writehere, mod_minilesson{{/str}}"></textarea>
            <div class="mod_minilesson_fw_wordgoal {{^countwords}}hidden{{/countwords}} ml_recsession">
                {{#str}} currentwordcount , mod_minilesson {{/str}}
                <p class="word-count-stats mb-0"><span class="ml_wordcount">0</span> / {{targetwordcount}}</p>
            </div>
        </div>
        <a class="btn btn-primary ml_freewriting_submitbutton w-auto" href="#">{{#str}}submit, mod_minilesson{{/str}}</a>
        <div class="timerstatus_{{uniqueid}} ml_freewriting_timerdisplay ml_recsession"></div>
    </div>
</div>
{{> mod_minilesson/questionfooter}}