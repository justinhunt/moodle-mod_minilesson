{{#buttons}}
    <div class="col-md-4 d-flex no-gutters p-0">
        <div class="minilesson_templates_card card m-1 p-2">
            <div class="minilesson_templates_card card-title mb-0">
                <h4 class="minilesson_templates_card_title">{{title}}</h4>
            </div>
            <div class="minilesson_templates_card_body card-body p-1">
                {{#shortentext}} 250, {{{description}}} {{/shortentext}}
            </div>
            <div class="minilesson_templates_card_footer d-flex align-items-center justify-content-between">
                <div class="minilesson_templates_card_button">
                    {{#thebutton}}
                        {{> core/single_button }}
                    {{/thebutton}}
                </div>
                <div class="minilesson_templates_card_itemcount">
                    <span>{{#str}} itemcount, mod_minilesson {{/str}} {{itemcount}}</span>
                </div>
            </div>
        </div>
    </div>
{{/buttons}}
