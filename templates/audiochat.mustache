{{> mod_minilesson/questionheader}}
{{> mod_minilesson/progresstimer}}
<div class="minilesson_audiochat_box">
     <div class="ml_audiochat_resultsbox"></div>
     <button class="ml_ac_start">Start Session</button>
     <div class="ml_audiochat_sessionpending_box" style="display: none">
        <center>
                <i class="fa fa-spinner fa-pulse fa-5x fa-fw"></i>
                <div>Starting: It can take 30s - 60s</div>
        </center>
     </div>
     <div class="ml_audiochat_sessionactive_box" style="display: none">
        <center>
        <img src="{{{ config.wwwroot }}}/mod/minilesson/pix/cutepoodll_small.png"/>
        <div>You can talk now!!</div>
        <button class="ml_ac_stop">Stop Session</button>
        </center>
     </div>
     <div class="ml_audiochat_stage">
        <p>
        
        <button class="ml_ac_talk" style="display: none" disabled>Push-to-talk (5s)</button>
        </p>
        <audio class="ml_ac_hiddenaudio" autoplay></audio>
        <div class="col">
        <div class="box">
        <h3>Student Transcripts (input)</h3>
        <pre class="ml_ac_studenttranscript"></pre>
        </div>
        <div class="box">
        <h3>AI Transcripts (output)</h3>
        <pre class="ml_ac_aitranscript"></pre>
        </div>
        </div>
     </div>
     <hr />
     <hr />
     <div class="ml_audiochat_actionbox">
        <div class="ml_audiochat_speakbtncontainer" style="width:246px;margin:auto;">
                {{> mod_minilesson/ttrecorder}}
        </div>
        <div class="timerstatus_{{uniqueid}} ml_audiochat_timerdisplay ml_recsession"></div>
     </div>
</div>
{{> mod_minilesson/questionfooter}}