<tr id="mod_minilesson_item_row_{{id}}" class="mod_minilesson_item_row" data-id="{{id}}">
    <td class="cell c0">
        <div class="d-flex align-items-center">
            <label class="mb-0 ml-1 align-self-md-end">
                <input name="deletequestionid[]" type="checkbox" value="{{id}}" data-action="toggle" data-toggle="slave" data-togglegroup="delete-question">
            </label>
            <div class="ml-3"><img class="itemicon" src="{{icon}}" alt="imgicon"></div>
            <div class="itemname ml-2">{{name}}  <p class="mobileviewtype mt-1 itemtype mb-0"> <span class="itemtypelabel">{{typelabel}}</span></p></div>
            <p class="itemtypename ml-2 itemtype mb-0"> <span class="ml-2 itemtypelabel">{{typelabel}}</span></p>

        </div>
    </td>
    <td class="itemdates cell c1 d-none" style="" data-index="{{index}}">
        {{index}}
    </td>
    <td class="itemdate cell c2" style="" data-index="{{index}}">
        <a href="#" class="mod_minilesson_item_move" data-id="{{id}}" data-direction="up">{{#pix}} arrowup, mod_minilesson {{/pix}}</a>
        <a href="#" class="mod_minilesson_item_move" data-id="{{id}}" data-direction="down">{{#pix}} arrowdown, mod_minilesson {{/pix}}</a>
    </td>
    <td class="itemaction cell c3" style="">
        <a href="#" class="mod_minilesson_item_row_previewlink" data-id="{{id}}" data-name="{{name}}" data-type="preview" alt="{{#str}}previewitem, mod_minilesson{{/str}}">{{#pix}}zoom, mod_minilesson{{/pix}}</a>
        <a href="#" class="mod_minilesson_item_row_editlink" data-id="{{id}}" data-qtype='{{type}}' data-type="edit" alt="{{#str}}edititem, mod_minilesson{{/str}}">{{#pix}}edit, mod_minilesson{{/pix}}</a>
        <a href="#" class="mod_minilesson_item_row_duplicatelink" data-id="{{id}}" data-name="{{name}}" data-type="duplicate" alt="{{#str}}duplicateitem, mod_minilesson{{/str}}">{{#pix}}copy, mod_minilesson{{/pix}}</a>
        <a href="#" class="mod_minilesson_item_row_deletelink" data-id="{{id}}" data-name="{{name}}" data-type="delete" alt="{{#str}}deleteitem, mod_minilesson{{/str}}">{{#pix}}trash, mod_minilesson{{/pix}}</a>
    </td>
</tr>