{{> mod_minilesson/questionheader}}
<div class="minilesson_tgapfill_player_box item-container">

    <div class="maintitle tgapfill_maintitle" style="display: none">{{iteminstructions}}</div>
    <div class="tgapfill_itemtext mod_minilesson_itemtext {{rtl}}" style="display: none">{{{itemtext}}}</div>

    <div class="startmodule_image_container tgapfill_image_container">
        <img class="startmodule_image tgapfill_image" src="{{{itemimageurl}}}" alt="{{#str}}tgapfill, mod_minilesson{{/str}}">
    </div>

    <div class="startmodule_title tgapfill_title">{{#str}}typinggapfill, mod_minilesson{{/str}}</div>

    <div class="startmodule_description tgapfill_description">{{iteminstructions}}</div>

    <div class="start_mainmenu tgapfill_mainmenu">
        <div class="tgapfill_loaded" style="display:none;">
            <button disabled class='btn startmodule_btn tgapfill_start_btn'>
                {{#str}}start, mod_minilesson{{/str}} <i class='fa fa-play ml-1'></i>
            </button>
        </div>
        <div class="tgapfill_not_loaded">
            <p>{{#str}}loading, mod_minilesson{{/str}}</p>
        </div>
    </div>

    {{> mod_minilesson/progresstimer }}

    <div style="display:none;" class="question"></div>

    <div style="display:none;" class="tgapfill_controls pb-3">
        <button class="btn tgapfill_ctrl-btn tgapfill_check_btn">
            <i class="fa fa-check"></i> {{#str}}check, mod_minilesson{{/str}}
        </button>

        <button class="btn tgapfill_ctrl-btn tgapfill_skip_btn">
            {{#str}}skip, mod_minilesson{{/str}} <i class="fa fa-arrow-right"></i>
        </button>
    </div>
    <div class="resultscontainer tgapfill_resultscontainer"></div>
</div>
{{> mod_minilesson/questionfooter}}